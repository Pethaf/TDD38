#include <stdexcept>
#include <iostream>
using namespace std;

int main()
{
	Fixed_Buffer<int, 10> ring10;

	for (int i = 1; i < 13; ++i)
	{
		ring10.push(i);
	}
	ring10.pop();
	cout << "Shall be 11: " << ring10.top() << endl;

	try {
		Fixed_Buffer<int, 5, Out_Of_Bounds> fb;
		for ( int i {}; i < 7; ++i )
		{
			fb.push(i);
		}
	}
	catch (std::out_of_range const & e)
	{
		cout << "Can't add more elements!" << endl;
	}

	try {
		Fixed_Buffer<int, 5, Out_Of_Bounds> fb;
		fb.pop();
	}
	catch (std::out_of_range const & e)
	{
		cout << "Can't remove without adding first..." << endl;
	}
}

